<body>
    
    <header>
        <% if signed_in? %>
          Signed in as: <%= current_user.email %>
        <%= button_to 'Sign out', sign_out_path, method: :delete %>
        <% else %>
          <%= link_to 'Sign in', sign_in_path %>
        <% end %>
    </header>
    
    <!-- For Clearence bundle -->
    <section>
        <div id="flash">
          <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
        <% end %>
    </div>
    </section>
    
    <div class="show_wrapper">
<h1>Information about Studdy Buddy!</h1>
<div id="about_buddy">
<br>
<p>
    <strong>First Name:</strong>
    <%= @buddy.fname %>
</p>
<br>

<p>
    <strong>Last Name:</strong>
    <%= @buddy.lname %>
</p>
<br>

<p>
    <strong>Email:</strong>
    <%= @buddy.email %>
</p>
<br>

<p>
    <strong>Gender:</strong>
    <%= @buddy.gender %>
</p>
<br>

<p>
    <strong>Class:</strong>
    <%= @buddy.class_name %>
</p>
<br>

<p>
    <strong>Class number:</strong>
    <%= @buddy.class_num %>
</p>
<br>

<p>
    <strong>Section number:</strong>
    <%= @buddy.section_num %>
</p>
<br>

<p>
    <strong>Topic:</strong>
    <%= @buddy.topic_1212 %>
</p>
<br>

<p>
    <strong>Availability:</strong>
    <%= @buddy.availability %>
</p>
<br>

<p>
    <strong>Time:</strong>
    <%= @buddy.time %>
</p>
<br>

<p>
    <strong>Comment:</strong>
    <%= @buddy.comment %>
</p>
<br>
</div>

<div id="post">
<h2>Posts</h2>
<% @buddy.responses.each do |response| %>
  <p>
    <strong>Responder:</strong>
    <%= response.responder %>
  </p>
 
  <p>
    <strong>Response:</strong>
    <%= response.body %>
  </p>
<% end %>

<p class="imp_comm">Add a comment:</p>
<%= form_for([@buddy, @buddy.responses.build]) do |f| %>
  <p>
    <%= f.label :responder %><br>
    <%= f.text_field :responder %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <div id="sub">
    <%= f.submit %>
  </div>
<% end %>
</div>




<div id="list">
    <%= link_to 'Listing Buddies', buddies_path %>
    <br>
    <br>
    <%= link_to 'Edit', edit_buddy_path(@buddy) %>
</div>



</div>
    
    
</body>

