<h1>Listing Buddies</h1>

<%= link_to 'New buddy', new_buddy_path %>
 
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Comment</th>
  </tr>
 
  <% @buddies.each do |buddy| %>
    <tr>
      <td><%= buddy.fname %></td>
      <td><%= buddy.lname %></td>
      <td><%= buddy.comment %></td>
      <td><%= link_to 'Show', buddy_path(buddy) %></td>
      <td><%= link_to 'Edit', edit_buddy_path(buddy) %></td>
      <td><%= link_to 'Destroy',
                             buddy_path(buddy),
                             method: :delete,
                             data: { confirm: 'Are you sure? :(' } %></td>
    </tr>
  <% end %>
</table>