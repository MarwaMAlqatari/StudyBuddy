<h1>Listing Buddies</h1>

<%= link_to 'New buddy', new_buddy_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th>Class#</th>
    <th>Section</th>
    <th>Topic</th>
    <th>Comment</th>
  </tr>
 
  <% @buddies.each do |buddy| %>
    <tr>
      <td><%= buddy.fname %> <%= buddy.lname[0] %></td>
      <td><%= buddy.class_name %></td>
      <td><%= buddy.class_num %></td>
      <td><%= buddy.section_num %></td>
      <td><%= buddy.topic_1212 %></td>
      <td><%= buddy.comment %></td>
      <td><%= link_to 'Show', buddy_path(buddy) %></td>
      <td><%= link_to 'Edit', edit_buddy_path(buddy) %></td>
      <td><%= link_to 'Destroy',
                             buddy_path(buddy),
                             method: :delete,
                             data: { confirm: 'Are you sure? :(' } %></td>
    </tr>
  <% end %>
</table>